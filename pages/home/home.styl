.v-home
  height 100%
  background #5A23FF
  &__date
  &__title
  &__autor
    color white

  &__content
    width 38%
    height 100%
    left 50%
    position relative
    text-transform uppercase
    letter-spacing 0.2em

  &__date
    padding-top 7vh
    display inline-block
    font-weight 600
    font-size 1.4rem

  &__title
    padding-top 30vh
    line-height 1.45em
    font-size 2.1rem

  &__desc
    color #FE7D42
    padding-top 2vh
    font-weight 600
    font-size 1.5rem

  &__autor
    padding-top 13rem


.mobile:not(.wide)
  .v-home
    &__content
      width 90vw
      left 5vw
